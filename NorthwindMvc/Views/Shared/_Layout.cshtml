<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NorthwindMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>
        <div class="bg-dark p-3">
            <a class="navbar-brand ml-3 text-white font-weight-bold" asp-controller="Home" asp-action="Index">Vadim Rumyancev WebApp</a>
            <a class="navbar-brand ml-1 text-white" asp-controller="Employee" asp-action="Index">Employees</a>
            <a class="navbar-brand ml-1 text-white" asp-controller="Product" asp-action="Index">Products</a>
            <a class="navbar-brand ml-1 text-white" asp-controller="Category" asp-action="Index">Categories</a>
            <a class="navbar-brand ml-1 text-white" asp-controller="BlogArticle" asp-action="Index">Articles</a>
        </div>
    </header>

    <div class="container" style="height:30px;">
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - NorthwindMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
