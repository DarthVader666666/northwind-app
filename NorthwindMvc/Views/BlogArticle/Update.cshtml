@model NorthwindMvc.Models.BlogArticleModels.BlogArticleCreateModel

<form method="post" asp-action="Update">
    <input asp-for="BlogArticle.ArticleId" value="@Model.BlogArticle.ArticleId" hidden/>
    <input asp-for="BlogArticle.EmployeeId" value="@Model.BlogArticle.EmployeeId" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="from-group row">
            <h2 class="text-black-50 pl-3">Update Article</h2>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group row">

                    <div class="col-6 text-right">
                        <label>Author:</label>
                    </div>
                    <div class="col-6">
                        @if (Model.BlogArticle.EmployeeId is not null)
                        {
                            var author = Model.Authors.First(x => x.EmployeeId == Model.BlogArticle.EmployeeId);
                            <label>@(author.FirstName + " " + author.LastName)</label>
                        }
                    </div>

                    <div class="col-6 text-right">
                        <label asp-for="@Model.BlogArticle.Title"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="@Model.BlogArticle.Title" value="@Model.BlogArticle.Title" class="form-control"/>
                        <span asp-validation-for="@Model.BlogArticle.Title" class="text-danger"></span>
                    </div>

                    <div class="col-6 text-right">
                        <label asp-for="@Model.BlogArticle.Text"></label>
                    </div>
                    <div class="col-6">
                        <textarea asp-for="@Model.BlogArticle.Text" style="width:600px;height:400px" class="form-control">
                            @Model.BlogArticle.Text
                        </textarea>
                        <span asp-validation-for="@Model.BlogArticle.Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update"/>
                         </div>
                         <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                         </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

