@model NorthwindMvc.Models.ProductModels.ProductModel

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="from-group row">
            <h2 class="text-black-50 pl-3">Add Product</h2>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group row">
                    <div class="col-6 text-right">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="ProductName" class="form-control"/>
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="col-6 text-right">
                        <label asp-for="QuantityPerUnit"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="QuantityPerUnit" class="form-control"/>
                        <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
                    </div>
                    <div class="col-6 text-right">
                        <label asp-for="UnitPrice"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="UnitPrice" class="form-control"/>
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                    <div class="col-6 text-right">
                        <label asp-for="UnitsInStock"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="UnitsInStock" class="form-control"/>
                        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create"/>
                         </div>
                         <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                         </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}